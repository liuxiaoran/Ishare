<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout

		android:layout_marginTop="10dp"
		android:id="@+id/myself_info_layout"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:background="@color/white">

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/usercenter_avatar_iv"
			android:layout_height="60dp"
			android:layout_width="60dp"
			android:layout_marginLeft="15dp"
			app:border_width="2dp"
			app:border_color="#FF000000"
			android:layout_centerVertical="true" />



			<TextView
				android:id="@+id/usercenter_name_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_centerInParent="true"
				android:textStyle="bold"
				android:textSize="14dp"
				android:layout_toRightOf="@id/usercenter_avatar_iv"
				android:layout_marginTop="20dp" />


	</RelativeLayout>



	<LinearLayout
		android:id="@+id/myself_info_mycollect"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_below="@+id/myself_info_layout"
		android:layout_marginTop="10dp"
		android:background="@color/white">

		<ImageView
			android:layout_width="20dp"
			android:layout_height="fill_parent"
			android:layout_marginLeft="20dp"
			android:src="@drawable/ic_action_setting" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_gravity="center_vertical"
			android:text="我的收藏" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/myself_info_mylend"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_below="@+id/myself_info_mycollect"
		android:layout_marginTop="10dp"
		android:background="@color/white">

		<ImageView
			android:layout_width="20dp"
			android:layout_height="fill_parent"
			android:layout_marginLeft="20dp"
			android:src="@drawable/ic_action_setting" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_gravity="center_vertical"
			android:text="我借的卡" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/myself_info_mywallet"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_below="@+id/myself_info_mylend"
		android:layout_marginTop="10dp"
		android:background="@color/white">

		<ImageView
			android:layout_width="20dp"
			android:layout_height="fill_parent"
			android:layout_marginLeft="20dp"
			android:src="@drawable/ic_action_setting" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_gravity="center_vertical"
			android:text="我的钱包" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/myself_info_mysetting"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_below="@+id/myself_info_mywallet"
		android:layout_marginTop="10dp"
		android:background="@color/white">

		<ImageView
			android:layout_width="20dp"
			android:layout_height="fill_parent"
			android:layout_marginLeft="20dp"
			android:src="@drawable/ic_action_setting" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_gravity="center_vertical"
			android:text="设置" />
	</LinearLayout>

</RelativeLayout>
