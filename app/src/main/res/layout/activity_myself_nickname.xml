<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/fbutton_color_clouds">

	<RelativeLayout
		android:id="@+id/myself_info_back"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:background="@color/huise">

		<ImageButton
			android:id="@+id/myself_info_name_back_image"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:src="@drawable/map_left"
			android:layout_marginLeft="10dp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/myself_info_name_back_image"
			android:layout_centerVertical="true"
			android:textStyle="bold"
			android:textSize="20dp"
			android:text="修改昵称" />

		<Button
			android:id="@+id/myself_info_nickname_save"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:text="保存"
			android:layout_marginRight="10dp"
			android:layout_marginTop="8dp"
			android:visibility="gone"
			android:layout_marginBottom="8dp"
			android:background="@color/fbutton_color_emerald" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/myself_info_namechange"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_marginTop="3dp"
		android:layout_below="@+id/myself_info_back"
		android:background="@color/white">

		<EditText
			android:id="@+id/myself_info_name_edit"
			android:layout_marginRight="10dp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:textSize="18dp" />
	</RelativeLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/myself_info_namechange"
		android:layout_marginLeft="10dp"
		android:text="一个好的昵称就是一张好的名片" />

</RelativeLayout>
