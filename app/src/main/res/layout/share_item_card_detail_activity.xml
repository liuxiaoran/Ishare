<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/share_item_detail_viewpager"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/share_item_detail_card_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="status" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/gray"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/share_item_detail_shop_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left" />

                <TextView
                    android:id="@+id/share_item_detail_discount_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right" />

            </LinearLayout>

        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/share_item_detail_owner_avatar_cv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/default_avatar"
                app:border_color="#00000000"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/share_item_detail_owner_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/share_item_detail_owner_avatar_cv"
                android:text="name" />

            <TextView
                android:id="@+id/share_item_detail_trade_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="美容" />
        </RelativeLayout>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:clickable="true"
            card_view:cardCornerRadius="@dimen/default_card_view_corner_radius"
            card_view:cardElevation="@dimen/default_card_view_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/share_item_detail_shop_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店的位置:"
                    android:textSize="@dimen/caption_text_size" />


                <TextView
                    android:id="@+id/share_item_detail_shop_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/share_item_detail_shop_location"
                    android:text="shopLocation"
                    android:textSize="@dimen/caption_text_size" />

                <LinearLayout
                    android:id="@+id/share_item_detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/share_item_detail_shop_location_tv"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店与您的距离:"
                        android:textSize="@dimen/caption_text_size" />

                    <TextView
                        android:id="@+id/share_item_detail_shop_distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="123"
                        android:textSize="@dimen/caption_text_size" />


                </LinearLayout>

                <TextView
                    android:id="@+id/share_item_detail_card_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/share_item_detail_layout"
                    android:layout_marginTop="5dp"
                    android:text="卡的类型:"
                    android:textSize="@dimen/caption_text_size" />

                <TextView
                    android:id="@+id/share_item_detail_card_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/share_item_detail_card_type"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/share_item_detail_card_type"
                    android:text="充值卡"
                    android:textSize="@dimen/caption_text_size" />


                <LinearLayout
                    android:id="@+id/share_item_detail_owner_location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/share_item_detail_card_type"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/share_item_detail_owner_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡主的位置:"
                        android:textSize="@dimen/caption_text_size" />

                    <TextView
                        android:id="@+id/share_item_detail_owner_location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="location"
                        android:textSize="@dimen/caption_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_item_detail_owner_distance_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/share_item_detail_owner_location_layout"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡主与您的距离:"
                        android:textSize="@dimen/caption_text_size"

                        />

                    <TextView
                        android:id="@+id/share_item_detail_owner_distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="123"
                        android:textSize="@dimen/caption_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/share_item_detail_owner_distance_layout"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/share_item_detail_card_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卡的描述:"
                        android:textSize="@dimen/caption_text_size" />

                    <TextView
                        android:id="@+id/share_item_detail_card_description_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:inputType="textMultiLine"
                        android:text="description"
                        android:textSize="@dimen/caption_text_size" />
                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <com.baidu.mapapi.map.MapView
            android:layout_marginTop="10dp"
            android:id="@+id/share_item_detail_mapview"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <info.hoang8f.widget.FButton
            android:id="@+id/share_item_detail_talk_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="给卡主留言"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/huise"
            fbutton:shadowEnabled="false"
            />

            <info.hoang8f.widget.FButton
                android:id="@+id/share_item_detail_borrow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我要借卡"
                android:textColor="@android:color/white"
                fbutton:buttonColor="@color/huise"
                fbutton:shadowEnabled="false"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>




    </LinearLayout>


</ScrollView>