<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pubishware_available_linearlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/publishware_available_listview_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/publishware_available_listview"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"/>

        <RelativeLayout
            android:id="@+id/publishware_available_newaddress_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_plus_icon"
                android:layout_toLeftOf="@+id/publishware_available_newaddress"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/publishware_available_newaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="新增地址"
                android:textSize="15dp"
                android:textColor="@color/red"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>