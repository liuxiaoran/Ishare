<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp">

	<RelativeLayout
		android:id="@+id/order_top"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp">
		<ImageView
			android:id="@+id/shop_image"
			android:layout_alignParentLeft="true"
			android:layout_width="100dp"
			android:layout_height="60dp"
			android:layout_centerVertical="true" />

		<ImageView
			android:id="@+id/card_tag"
			android:layout_width="30dp"
			android:layout_height="15dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/shop_image"
			android:layout_alignTop="@+id/shop_image"
			android:layout_toRightOf="@+id/shop_image"
			android:layout_toLeftOf="@+id/card_tag"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/card_distance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="永琪美容美发(知春路店)"
				android:textSize="12sp"
				android:textColor="#000000"
				android:layout_weight="1"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_weight="1">
				<TextView
					android:id="@+id/card_discount"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/red"
					android:textSize="16sp"
					android:text="1折"/>

				<TextView
					android:id="@+id/card_type"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:textSize="12sp"
					android:text="优惠卡"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/order_state_tag"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:textSize="12sp"
					android:text="状态："/>

				<TextView
					android:id="@+id/order_state"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="5dp"
					android:textSize="12sp"
					android:text="申请中"
					android:textColor="@color/blue"/>
			</LinearLayout>

		</LinearLayout>
	</RelativeLayout>

	<ImageView
		android:id="@+id/sep_line"
		android:layout_width="match_parent"
		android:layout_below="@+id/order_top"
		android:layout_height="1dp"
		android:layout_marginTop="5dp"
		android:background="@color/gray"/>

	<RelativeLayout
		android:id="@+id/order_bottom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/sep_line"
		android:layout_marginTop="3dp">

		<ImageView
			android:id="@+id/state_tag"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:layout_centerVertical="true"/>

		<TextView
			android:id="@+id/shop_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/state_tag"
			android:layout_marginLeft="5dp"
			android:layout_centerVertical="true"
			android:text="向xxx发送了一个借卡请求"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:text="1分钟前"/>
	</RelativeLayout>

	<ImageView
		android:layout_width="match_parent"
		android:layout_below="@+id/order_bottom"
		android:layout_height="3dp"
		android:layout_marginTop="1dp"
		android:layout_marginBottom="0dp"
		android:background="@color/red"/>
</RelativeLayout>
