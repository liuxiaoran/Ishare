<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/publish_card_numberpicker1_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </NumberPicker>

        <TextView
            style="@style/primary_textview"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:text="." />

        <NumberPicker
            android:id="@+id/publish_card_numberpicker2_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </NumberPicker>

        <TextView

            style="@style/primary_textview"
            android:layout_gravity="center_vertical"
            android:text="%" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        style="@style/hint_textview"
        android:textColor="@color/dark_secondary_text"
        android:text="服务费是借卡人需要额外支付的费用。例如服务费是2%,实际消费了100元，则需要支付给卡主100+100*2%（服务费）=102元" />


</LinearLayout>