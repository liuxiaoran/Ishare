<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/share_item_discount_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_layout_pressed"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/share_item_discount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="折扣优先"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/main_tab_discount_selected_iv"
                    android:layout_width="8dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/main_tab_selected_triangle"
                    android:visibility="invisible" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/share_item_distance_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_layout_pressed"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/share_item_distance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="距离优先"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/main_tab_distance_selected_iv"
                    android:layout_width="8dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/main_tab_selected_triangle"
                    android:visibility="invisible" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_layout_pressed"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/share_item_category_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical|left"-->
                    <!--android:gravity="left"-->
                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:background="@drawable/ic_category_movie"/>-->

                    <TextView
                        android:id="@+id/share_item_category_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="分类"
                        android:textColor="@color/dark_primary_text"
                        android:textSize="12sp" />


                    <ImageView
                        android:id="@+id/main_catagory_tab_arrow_iv"
                        android:layout_width="10dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/selector_arrow_dropdown" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/main_tab_catagory_selected_iv"
                    android:layout_width="8dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/main_tab_selected_triangle"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/horizontal_divider"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/share_item_is_locating_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="正在定位..." />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/share_item_listview_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </FrameLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/share_item_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loading_background"
        android:visibility="invisible">

        <ProgressBar

            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/map_style_floating_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="32dp"
        android:src="@drawable/icon_map"
        fab:fab_colorNormal="@color/floating_btn_normal"
        fab:fab_colorPressed="@color/floationg_btn_pressed"
        fab:fab_colorRipple="@color/floating_btn_ripple"
        fab:fab_shadow="true"
        fab:fab_type="mini" />

</FrameLayout>

