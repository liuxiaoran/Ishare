<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/order_actionbar_background_shape"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/order_actionbar_borrow_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/order_actionbar_white_tv"
        android:padding="8dp"
        android:text="借入"
        android:textColor="@color/huise" />

    <TextView
        android:id="@+id/order_actionbar_lend_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/order_actionbar_gray_tv"
        android:padding="8dp"
        android:text="借出"
        android:textColor="@color/white" />

</LinearLayout>

