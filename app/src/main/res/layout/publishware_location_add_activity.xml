<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/primary_textview"
                android:layout_gravity="center"
                android:text="地址" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:id="@+id/publishware_available_add_layout">

                <ImageView

                    android:id="@+id/publish_owner_gps_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_aim"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/publishware_available_add_addr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            style="@style/horizontal_divider"
            android:layout_marginBottom="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/primary_textview"
                android:text="时间" />

            <TextView
                android:id="@+id/publishware_available_add_begin_time_tv"
                style="@style/secondary_textview"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="--" />

            <TextView
                android:id="@+id/publishware_available_add_end_time_tv"
                style="@style/secondary_textview"
                android:layout_width="50dp" />
        </LinearLayout>


    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:id="@+id/publishware_available_edit_confirm_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:buttonColor="@color/color_primary"
        app:cornerRadius="2dp"
        app:shadowEnabled="false" />


</LinearLayout>