<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/default_layout_padding">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/primary_textview"
                    android:text="*"
                    android:textColor="@color/hint_star" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="店名"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="@dimen/primary_text" />

                <LinearLayout
                    android:id="@+id/publish_shop_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/publish_shop_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="点击搜索店铺"
                        android:textColor="@color/dark_primary_text"
                        android:textColorHint="@color/dark_hint_text"
                        android:textSize="@dimen/secondary_text" />

                    <ImageView
                        android:id="@+id/publishware_shopname_hint_iv"
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center_vertical"
                        android:padding="3dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/right_arrow" />
                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="5dp" />


            <RelativeLayout
                android:id="@+id/publish_ware_location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/_tem"
                    style="@style/primary_textview"
                    android:text="*"
                    android:textColor="@color/hint_star" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/publish_ware_shop_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/_tem"
                    android:text="店址"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="@dimen/primary_text" />

                <ImageView
                    android:id="@+id/publish_shop_addr_hint_iv"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:cropToPadding="true"
                    android:padding="3dp"
                    android:scaleType="centerInside" />

                <TextView

                    android:id="@+id/publish_shop_location_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/publish_ware_shop_location_tv"
                    android:background="@null"
                    android:hint="选择店名之后就有店址了"
                    android:maxLines="2"
                    android:textColor="@color/dark_secondary_text"
                    android:textColorHint="@color/dark_hint_text"
                    android:textSize="@dimen/secondary_text" />

            </RelativeLayout>

            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="5dp" />

            <RelativeLayout
                android:id="@+id/publishware_discount_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_layout_marginTop">

                <TextView
                    android:id="@+id/_tem1"
                    style="@style/primary_textview"
                    android:text="*"
                    android:textColor="@color/hint_star" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/publish_discount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="折扣"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="@dimen/primary_text" />


                <ImageView
                    android:id="@+id/publish_discount_arrow_iv"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/publish_ware_discount_tv"
                    style="@style/secondary_textview"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/publish_discount_arrow_iv"
                    android:gravity="right"
                    android:hint="点击选择折扣"
                    android:textColorHint="@color/dark_hint_text"
                    android:textSize="@dimen/secondary_text" />


            </RelativeLayout>


            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="2dp" />

            <RelativeLayout
                android:id="@+id/publishware_commission_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_layout_marginTop">

                <TextView
                    android:id="@+id/_tem2"
                    style="@style/primary_textview"
                    android:text="*"
                    android:textColor="@color/hint_star" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/publish_commission_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="佣金"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="@dimen/primary_text" />


                <ImageView
                    android:id="@+id/publish_ware_commission_arrow_iv"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/right_arrow" />

                <TextView
                    android:id="@+id/publish_ware_commission_tv"
                    style="@style/secondary_textview"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/publish_ware_commission_arrow_iv"
                    android:gravity="right"
                    android:hint="借卡人实际消费基础上额外支付的比例"
                    android:textColorHint="@color/dark_hint_text"
                    android:textSize="@dimen/secondary_text" />


            </RelativeLayout>

            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_layout_marginTop">

                <TextView
                    android:id="@+id/_tem3"
                    style="@style/primary_textview"
                    android:text="*"
                    android:textColor="@color/hint_star" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/publish_card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="种类"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="@dimen/primary_text" />

                <RadioGroup
                    android:id="@+id/publish_card_type_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/publish_card_tv"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/publish_type_charge_rb"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:background="@drawable/card_type_radio_btn_selector"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="充值卡"
                        android:textColor="@color/card_type_text_selector"
                        android:textSize="@dimen/secondary_text" />

                    <RadioButton
                        android:id="@+id/publish_type_member_rb"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/card_type_radio_btn_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="会员卡"
                        android:textColor="@color/card_type_text_selector"
                        android:textSize="@dimen/secondary_text" />
                </RadioGroup>
            </RelativeLayout>

            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="2dp" />

            <RadioGroup
                android:id="@+id/publish_trade_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="@dimen/default_layout_marginTop"
                android:layout_toRightOf="@id/publish_card_tv"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/publish_meirong_rb"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@drawable/card_type_radio_btn_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="美容"
                    android:textColor="@color/card_type_text_selector"
                    android:textSize="@dimen/secondary_text" />

                <RadioButton
                    android:id="@+id/publish_meifa_rb"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/card_type_radio_btn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="美发"
                    android:textColor="@color/card_type_text_selector"
                    android:textSize="@dimen/secondary_text" />

                <RadioButton
                    android:id="@+id/publish_meijia_rb"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/card_type_radio_btn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="美甲"
                    android:textColor="@color/card_type_text_selector"
                    android:textSize="@dimen/secondary_text" />

                <RadioButton
                    android:id="@+id/publish_qinzi_rb"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/card_type_radio_btn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="亲子"
                    android:textColor="@color/card_type_text_selector"
                    android:textSize="@dimen/secondary_text" />


                <RadioButton
                    android:id="@+id/publish_other_rb"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="-230dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/card_type_radio_btn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="其他"
                    android:textColor="@color/card_type_text_selector"
                    android:textSize="@dimen/secondary_text" />


            </RadioGroup>


            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="5dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_layout_marginTop"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/publishware_description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="描述"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="@dimen/primary_text" />

                <ImageView
                    android:id="@+id/publish_description_hint_iv"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:cropToPadding="true"
                    android:padding="3dp"
                    android:scaleType="centerInside" />

                <EditText
                    android:id="@+id/publish_card_description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/publishware_description_tv"
                    android:background="@null"
                    android:hint="对于该卡的描述"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:maxLines="5"
                    android:textColor="@color/dark_primary_text"
                    android:textColorHint="@color/dark_hint_text"
                    android:textSize="@dimen/secondary_text" />

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/publish_ware_sharetype_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/default_layout_padding">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/_tem4"
                    style="@style/primary_textview"
                    android:text="*"
                    android:textColor="@color/hint_star" />

                <TextView
                    android:layout_marginLeft="5dp"
                    style="@style/primary_textview"
                    android:text="地址" />

                <TextView
                    android:id="@+id/publish_ware_choose_addr_tv"
                    style="@style/primary_textview"
                    android:layout_alignParentRight="true"
                    android:text="选择"
                    android:textColor="@color/color_primary" />

            </RelativeLayout>

            <View
                style="@style/horizontal_divider"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:id="@+id/publish_ware_avaialble_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="vertical"
                android:paddingTop="5dp">


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_layout_marginTop"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/default_layout_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图片" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="最多上传3张"
                    android:textColor="@color/dark_secondary_text"
                    android:textSize="@dimen/hint_text" />
            </LinearLayout>

            <GridView
                android:id="@+id/publishware_cardpic_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:horizontalSpacing="3dp"
                android:listSelector="@color/white"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="5dp"></GridView>
        </LinearLayout>

        <info.hoang8f.widget.FButton
            android:id="@+id/publish_ware_publish_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="发布这张卡"
            android:textColor="@color/white"
            android:textSize="@dimen/primary_text"
            app:buttonColor="@color/color_primary"
            app:cornerRadius="2dp"
            app:shadowEnabled="false" />
    </LinearLayout>
</ScrollView>